#include <iostream>

using namespace std;

int main()
{
    int n, n1=0, n2=1, sum;
    cout<<"\nEnter the limit:";
    cin>>n;
    
    cout<<"\n The Fibonacci series is:";
    
       while(n>0)
        {
            sum=n1+n2;
            n1=n2;
            n2=sum;
            cout<<"  \n"<<sum;
            n--;
        }
    
    return 0;
}
